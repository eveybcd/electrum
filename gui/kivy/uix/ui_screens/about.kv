#:import VERSION electrum.version.ELECTRUM_VERSION

Popup:
    title: _("About Electrum BCD")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: "Electrum BCD Develope Organzation"
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by Electrum BCD Technologies')
            padding: '0dp', '20dp'
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
